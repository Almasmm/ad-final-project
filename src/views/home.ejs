<%- include('partials/catalog-filters', {
    heading: 'All products',
    subtitle: 'Use search and filters to narrow down the catalog.',
    hint: 'Example: mx, mouse, keyboard',
    submitLabel: 'Search',
    showSearchLink: false
}) %>

<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0">All products</h5>
        <span class="text-muted small" id="productsCount"></span>
    </div>
    <p class="text-muted small" id="searchSummary"></p>
    <div id="products" class="row g-3"></div>
    <p id="productsEmpty" class="text-muted text-center py-4 d-none">No items match the filters.</p>
</section>

<% if (userId) { %>
    <section class="card card-body shadow-sm">
        <div class="d-flex justify-content-between flex-wrap mb-3">
            <div>
                <h5 class="mb-1">Recommended for you</h5>
                <p class="text-muted small mb-0">We use your browsing, likes, and orders to suggest ideas.</p>
            </div>
            <a class="btn btn-sm btn-outline-secondary mt-2 mt-md-0" href="/me/reco">Go to recommendations</a>
        </div>
        <div id="reco" class="row g-3"></div>
        <p id="recoEmpty" class="text-muted mb-0"></p>
        <script>window.__USER_ID__ = "<%= userId %>";</script>
    </section>
<% } %>
