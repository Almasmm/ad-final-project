<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-body shadow-sm auth-card">
            <h3 class="mb-3 text-center">Create an account</h3>
            <div class="alert d-none" id="registerInfo"></div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input id="reg_email" class="form-control" placeholder="you@example.com" autocomplete="email">
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input id="reg_name" class="form-control" placeholder="Your full name">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input id="reg_password" type="password" class="form-control" placeholder="At least 8 characters" autocomplete="new-password">
            </div>
            <div class="mb-3">
                <label class="form-label">Segments (optional)</label>
                <input id="reg_segments" class="form-control" placeholder="electronics, lifestyle">
                <div class="form-text">Used to personalize recommendations.</div>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" id="regBtn">Create account</button>
                <a class="btn btn-link" href="/login">I already have an account</a>
            </div>
        </div>
    </div>
</div>
