<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= typeof title !== 'undefined' ? title : 'Tenyz Market' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>

<% const currentPage = typeof page !== 'undefined' ? page : ''; %>
<body data-page="<%= currentPage %>" data-role="<%= role || '' %>" data-email-verified="<%= emailVerified ? '1' : '0' %>">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand fw-semibold" href="/">Tenyz Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <% if (userId) { %>
                    <ul class="navbar-nav align-items-lg-center gap-2 w-100 justify-content-lg-end">
                        <li class="nav-item text-white-50 small me-lg-3">
                            Signed in as <strong><%= email || 'no email' %></strong>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= ['home','search'].includes(currentPage) ? 'active' : '' %>"
                                href="/">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= currentPage === 'wishlist' ? 'active' : '' %>"
                                href="/me/wishlist">Wishlist</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= currentPage === 'profile' ? 'active' : '' %>"
                                href="/me/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= currentPage === 'reco' ? 'active' : '' %>"
                                href="/me/reco">Recommendations</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= currentPage === 'history' ? 'active' : '' %>"
                                href="/me/history">History</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm position-relative"
                                id="cartIndicator" data-count="0" aria-live="polite"
                                href="/me/cart">
                                Cart (empty)
                            </a>
                        </li>
                        <% if (role === 'admin') { %>
                            <li class="nav-item">
                                <a class="btn btn-outline-warning btn-sm <%= currentPage === 'admin' ? 'active' : '' %>"
                                    href="/admin">Admin</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <button class="btn btn-danger btn-sm ms-lg-2" id="logoutBtn">Logout</button>
                        </li>
                    </ul>
                <% } else { %>
                    <ul class="navbar-nav align-items-lg-center gap-2 w-100 justify-content-lg-end">
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= ['home','search'].includes(currentPage) ? 'active' : '' %>"
                                href="/">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm <%= currentPage === 'login' ? 'active' : '' %>"
                                href="/login">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm <%= currentPage === 'register' ? 'active' : '' %>"
                                href="/register">Sign up</a>
                        </li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="container mb-5">
        <div id="globalAlert" class="alert alert-info d-none" role="alert"></div>
        <%- body %>
    </main>

    <script src="/js/app.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

