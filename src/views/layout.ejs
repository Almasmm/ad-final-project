<!doctype html>
<html lang="ru">

<head><%- include('partials/head', { title }) %></head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">AD Shop</a>
            <div class="d-flex gap-2">
                <% if (userId) { %>
                    <a class="btn btn-outline-primary" href="/me/reco">Рекомендации</a>
                    <a class="btn btn-outline-secondary" href="/me/history">История</a>
                    <% } %>
                        <a class="btn btn-outline-success" href="/admin">Админ</a>
                        <% if (!userId) { %>
                            <a class="btn btn-primary" href="/login">Войти</a>
                            <a class="btn btn-secondary" href="/register">Регистрация</a>
                            <% } else { %>
                                <button class="btn btn-danger" id="logoutBtn">Выход</button>
                                <% } %>
            </div>
        </div>
    </nav>

    <main class="container mb-5">
        <%- body %>
    </main>

    <script src="/js/app.js"></script>
</body>

</html>