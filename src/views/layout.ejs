<!doctype html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        <%= typeof title !=='undefined' ? title : 'AD Shop' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>

<body data-page="<%= typeof page !== 'undefined' ? page : '' %>">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">AD Shop</a>

            <div class="ms-auto d-flex gap-2">
                <% if (typeof userId !=='undefined' && userId) { %>
                    <a class="btn btn-outline-primary btn-sm" href="/me/reco">Рекомендации</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/me/history">История</a>
                    <% } %>

                        <a class="btn btn-outline-success btn-sm" href="/admin">Админ</a>

                        <% if (typeof userId==='undefined' || !userId) { %>
                            <a class="btn btn-primary btn-sm" href="/login">Войти</a>
                            <a class="btn btn-secondary btn-sm" href="/register">Регистрация</a>
                            <% } else { %>
                                <button class="btn btn-danger btn-sm" id="logoutBtn">Выход</button>
                                <% } %>
            </div>
        </div>
    </nav>

    <main class="container mb-5">
        <%- body %>
    </main>

    <script src="/js/app.js"></script>
</body>

</html>