<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-body shadow-sm auth-card">
            <h3 class="mb-3">Verify email</h3>
            <div class="alert d-none" id="verifyInfo"></div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input id="verify_email" class="form-control" placeholder="you@example.com">
            </div>
            <div class="mb-3">
                <label class="form-label">Code from email</label>
                <input id="verify_code" class="form-control" placeholder="Example: 123456">
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" id="verifyBtn">Verify</button>
                <button class="btn btn-outline-secondary" id="resendVerifyBtn">Resend code</button>
                <a class="btn btn-link" href="/login">Back to login</a>
            </div>
        </div>
    </div>
</div>
